# Supabase Configuration
SUPABASE_URL=https://alpkdqothfehghddjffy.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ─── Printer Configuration ────────────────────────────────────────────────────
# DEFAULT_PRINTER is the fallback used for:
#   - Any kitchen that has no specific KITCHEN_N_PRINTER set
#   - Items with no kitchen_number (unassigned)
# Use the exact Windows printer name (Settings → Bluetooth & Devices → Printers)
DEFAULT_PRINTER=80mm Series Printer

# Per-kitchen printers — add one line per kitchen number you have.
# If a kitchen's printer is not listed here, DEFAULT_PRINTER is used instead.
# Example setup for 4 kitchens:
KITCHEN_1_PRINTER=Kitchen1-80mm
KITCHEN_2_PRINTER=Kitchen2-80mm
KITCHEN_3_PRINTER=Kitchen3-80mm
KITCHEN_4_PRINTER=Kitchen4-80mm
# KITCHEN_5_PRINTER=Kitchen5-80mm   ← add more as needed

# Backwards-compat alias — only used if DEFAULT_PRINTER is not set
PRINTER_NAME=80mm Series Printer

# ─── Print Settings ───────────────────────────────────────────────────────────
# Set to true to enable automatic printing when payment is confirmed
AUTO_PRINT_ENABLED=true

# Which payment_status value triggers printing ('paid' for online, 'paid' for cash too)
PRINT_ON_PAYMENT_STATUS=paid

# Play a system sound + desktop notification on new order
PLAY_SOUND=true

# Open the cash drawer after printing the first slip (requires connected drawer)
OPEN_CASH_DRAWER=false
